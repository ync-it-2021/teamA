<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.ync.mapper.ShopMapper">

<select id ="shoplist"  resultType="kr.ac.ync.domain.categoryVO">
	select 
	PRD_IDX,PRD_NAME,PRD_COST_PRICE,PRD_AMOUNT,PRD_IMG1,PRD_COMPANY,PRD_KIND,PRD_CATEGORY
	from PRODUCT where prd_kind =#{prd_kind}
  	</select>  	
  	
  	
  	<select id="shopdetail" resultType="kr.ac.ync.domain.categoryVO">
  	select  
	PRD_IDX,PRD_NAME,PRD_COST_PRICE,PRD_AMOUNT,PRD_IMG1,PRD_COMPANY,PRD_KIND
	from PRODUCT where prd_idx =#{PRD_IDX}
  	</select>
  	
  	 <select id ="SHOPTOTAL" resultType="kr.ac.ync.domain.categoryVO">
  	
  	select COUNT(PRD_KIND) FROM PRODUCT where PRD_KIND =#{PRD_KIND}

 
  	 </select>
  	 
  	 <select id="Shopbanner" resultType="kr.ac.ync.domain.categoryVO">
  	 select  
	PRD_CATEGORY,PRD_IMG1,PRD_KIND
	from PRODUCT where PRD_KIND =#{PRD_KIND}
  	 
  	 
  	 </select>
  	
  	
</mapper>